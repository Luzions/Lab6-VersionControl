def encode(password):
    new_encode = list(str(password))
    new_encode = [int(i)+3 for i in new_encode]         # compressed list incrementing each item
    new_encode = "".join(map(str, new_encode))         #revert each item in new_encode as str and join without comma
    return new_encode


#add decode()


print("Menu")
print("-------------")
print("1. Encode")
print("2. Decode")
print("3. Quit")

while True:
    option = int(input("\nPlease enter an option: "))

    if option == 1:
        password = int(input(f"Please enter your password to encode: "))
        new_encode = encode(password)
        print("Your password has been encoded and stored!")

    if option == 2:
        print(f"The encoded password is {new_encode} and the original password is {password}.")


    if option == 3:
        break
